{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "downlevelIteration": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "lib": ["ESNext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "out",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020",
    "declaration": true,
    "plugins": [
      {
        "transform": "./src/index.ts"
      }
    ]
  },
  "include": ["src"]
}
